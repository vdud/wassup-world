// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String     @unique
  messages    Message[]
  ownedGroups Groups[]
  allGroups   AllUsers[]
}

model Message {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  sender    User   @relation(fields: [senderId], references: [id])
  senderId  String
  Groups    Groups @relation(fields: [messageId], references: [id])
  messageId String
}

model Groups {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  userOwner User?      @relation(fields: [OwnerId], references: [id])
  OwnerId   String?
  message   Message[]
  nature    nature     @default(PUBLIC)
  allUsers  AllUsers[]
}

model AllUsers {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String

  group   Groups @relation(fields: [groupId], references: [id])
  groupId String
  role    role   @default(USER)

  @@unique([userId, groupId])
}

enum nature {
  PUBLIC
  HASHTAGS
  LOCATIONS
}

enum role {
  ADMIN
  USER
}
